*.sh text eol=lf

*.md text whitespace=-blank-at-eol

# Custom for Visual Studio
*.cs     text diff=csharp
*.sln    merge=union whitespace=-tab-in-indent,-blank-at-eof,indent-with-non-tab
*.csproj merge=union
*.vbproj merge=union
*.fsproj merge=union
*.dbproj merge=union

# Standard to msysgit
*.doc	 diff=astextplain
